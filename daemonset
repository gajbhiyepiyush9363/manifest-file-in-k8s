apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: demo-ds
  namespace: demo-ns
spec:
  selector:
    matchLabels:
      app: nginx-daemon
  template:
    metadata:
      labels:
        app: nginx-daemon
    spec:
      containers:
        - name: nginx
          image: nginx:latest
          ports:
            - containerPort: 80
          envFrom:
            - configMapRef:
                name: demo-config
