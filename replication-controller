apiVersion: v1
kind: ReplicationController
metadata:
  name: demo-rc
  namespace: demo-ns
spec:
  replicas: 2
  selector:
    app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
        - name: nginx
          image: nginx:latest
          ports:
            - containerPort: 80
          envFrom:
            - configMapRef:
                name: demo-config
